<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/walkthrough3Background"
    android:orientation="vertical">

    <EditText
        style="@style/LoginSignUp5Input"
        android:hint="Username" />

    <EditText
        style="@style/LoginSignUp5Input"
        android:hint="Password"
        android:inputType="textPassword" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="50dp"
            android:buttonTint="@color/button_grocrgreen"
            android:text="Remember me"
            android:textColor="@color/loginSignup15text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:text="Forgot Password"
            android:textColor="@color/loginSignup15text"
            android:textStyle="bold" />

    </RelativeLayout>

    <Button
        android:id="@+id/btnSignIn"
        style="@style/ButtonGrocrGreen"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:onClick="onClick"
        android:text="Sign In"
        android:textAllCaps="true"
        android:stateListAnimator="@null"
        android:textColor="@android:color/white" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:src="@mipmap/img_or" />

    <Button
        android:id="@+id/btnSignFacebook"
        style="@style/ButtonBlue"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:onClick="onClick"
        android:text="Sign In with Facebook"
        android:stateListAnimator="@null"
        android:textAllCaps="true"
        android:textColor="@android:color/white" />

</LinearLayout>

