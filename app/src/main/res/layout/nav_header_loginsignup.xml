<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Space
        android:id="@+id/spaceLeftTop"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnNavBarAccount"
        style="@style/MainMenuLeftButtonStyle"
        android:onClick="onClick"
        android:text="Account" />

    <Button
        android:id="@+id/btnNavBarStoreBrowse"
        style="@style/MainMenuLeftButtonStyle"
        android:onClick="onClick"
        android:text="Browse by Store" />

    <Button
        android:id="@+id/btnNavBarCategoryBrowse"
        style="@style/MainMenuLeftButtonStyle"
        android:onClick="onClick"
        android:text="Browse by Category" />

    <Button
        android:id="@+id/btnNavBarFavs"
        style="@style/MainMenuLeftButtonStyle"
        android:onClick="onClick"
        android:text="Favourites" />

    <Button
        android:id="@+id/btnNavBarSettings"
        style="@style/MainMenuLeftButtonStyle"
        android:onClick="onClick"
        android:text="Settings" />
</LinearLayout>
