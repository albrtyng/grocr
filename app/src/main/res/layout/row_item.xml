<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <RelativeLayout
            android:id="@+id/icard"
            android:layout_width="match_parent"
            android:layout_height="85dp">

            <ImageView
                android:id="@+id/iimageMain"
                android:adjustViewBounds="true"
                android:maxWidth="7dp"
                android:maxHeight="7dp"
                android:scaleType="fitStart"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:src="@mipmap/loginsignup23_bg" />

            <!--<ImageView-->
                <!--android:id="@+id/ititleBar"-->
                <!--android:layout_marginTop="95dp"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="55dp"-->
                <!--android:background="@android:color/white"-->
                <!--/>-->
            <CheckBox
                android:id="@+id/iCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="312dp"
                android:buttonTint="@color/button_grocrgreen"/>

            <TextView
                android:id="@+id/ititle"
                android:layout_marginLeft="65dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/iimageMain"
                android:layout_marginTop="15dp"
                android:text="FreshCo"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/iprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_marginLeft="285dp"
                android:textColor="@color/button_grocrgreen"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="$1.99"/>

            <TextView
                android:layout_alignLeft="@id/iimageMain"
                android:layout_marginLeft="65dp"
                android:id="@+id/icategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iCheckBox"
                android:layout_marginBottom="5dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:text="1151 Dundas St W, Mississauga"
                android:textColor="@android:color/darker_gray"
                android:textSize="10sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>