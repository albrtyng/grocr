<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splashpage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/button_grocrgreen"
    android:orientation="vertical"
    tools:context="com.albertandmanisha.grocr.SplashScreenActivity">

    <FrameLayout
        android:id="@+id/splashpage_top"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/splashpagelogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="98dp"
            android:layout_marginTop="175dp"
            android:adjustViewBounds="true"
            android:maxHeight="200dp"
            android:maxWidth="250dp"
            android:scaleType="fitCenter"
            android:src="@drawable/logowhitenofruit" />

        <ImageView
            android:id="@+id/banana"
            android:layout_marginLeft="156dp"
            android:layout_marginTop="175.5dp"
            android:maxHeight="40dp"
            android:maxWidth="35dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/banana"
            />
        <ImageView
            android:id="@+id/apple"
            android:layout_marginLeft="130.45dp"
            android:layout_marginTop="177dp"
            android:maxHeight="30dp"
            android:maxWidth="30dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/apple"
            />
        <ImageView
            android:id="@+id/melon"
            android:layout_marginLeft="182dp"
            android:layout_marginTop="176.5dp"
            android:maxHeight="30dp"
            android:maxWidth="35dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/melon"
            />
        <ImageView
            android:id="@+id/pear"
            android:layout_marginLeft="211dp"
            android:layout_marginTop="176dp"
            android:maxHeight="30dp"
            android:maxWidth="30dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pear"
            />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/splashpage_bottom"
        android:layout_width="match_parent"
        android:layout_height="275dp">

        <ImageView
            android:id="@+id/splashpagetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="123dp"
            android:adjustViewBounds="true"
            android:maxHeight="150dp"
            android:maxWidth="120dp"
            android:scaleType="fitCenter"
            android:src="@drawable/logotextwhite" />
    </LinearLayout>

</LinearLayout>
